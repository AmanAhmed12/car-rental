@{
    ViewData["Title"] = "GuestReview";
    var successMessage = TempData["SuccessMessage"] as string ?? "";
    var errorMessage = TempData["ErrorMessage"] as string ?? "";
    var ReviewDetails = ViewBag.ReviewDetails as List<ReviewDetails> ?? new List<ReviewDetails>(); // Default to empty list if null
    var carTypes = ViewBag.CarTypes as List<Cars>; // Default to empty list if null
    Layout = null;
}

@model Review

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 150px;
        }

        h3 {
            color: black;
            font-weight: bold;
            text-align: center;
        }
        h1{
            font-family: 'Poppins', sans-serif;
            font-size: 2rem;
            font-weight: bold;
            color: #333;
        }

        .table-container {
            margin-top: 30px;
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        .reviewHead {
            background: linear-gradient(45deg, #ff7e5f, #feb47b);
            width: 100vw;
        }

        .btn-back {
            background: linear-gradient(45deg, #ff7e5f, #feb47b);
            border: none;
            padding: 3px 8px;
            margin: 10px;
            font-size: 0.8rem;
            font-weight: bolder;
        }

            .btn-back:hover {
                background: linear-gradient(45deg, #ff512f, #dd2476);
            }
    </style>
</head>

<body>
    <div class="reviewHead d-flex justify-content-between align-items-center">
        <!-- Back to Home Button (left corner) -->
        <a href="@Url.Action("Index", "GuestDashboard")" class="btn btn-back">Dashboard</a>
        <h1 class="mx-auto">Reviews</h1>
    </div>

    <div class="container">
        <!-- Display success/error messages -->
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success">@successMessage</div>
        }
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }

        <!-- Reviews Table -->
        <div class="table-container">
            <table id="reviewTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Description</th>
                        <th>Member</th>
                        <th>Car Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in ReviewDetails)
                    {
                        <tr>
                            <td>@review.Id</td>
                            <td>@review.Name</td>
                            <td>@review.Email</td>
                            <td>@review.Description</td>
                            <td>@review.MemberName</td>
                            <td>@review.CarType</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable with pagination
            $('#reviewTable').DataTable({
                "paging": true,
                "pageLength": 10,  // Show 10 rows per page
                "lengthChange": false, // Hide "Show entries" dropdown
                "info": false, // Hide table information
                "ordering": true, // Enable sorting
                "searching": false
            });

            setTimeout(function () {
                $(".alert").fadeOut("slow");
            }, 5000); // Auto-hide success/error messages after 5 seconds
        });
    </script>
</body>


</html>
