@{
    ViewData["Title"] = "Guest_Dashboard";
    Layout = null; // This means no layout will be applied to this view.
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome for Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <!-- External CSS for styles -->
    <link rel="stylesheet" href="~/css/guestDashboard.css" />
</head>

<body>

    <!-- Sidebar -->
    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="toggleNav()">&times;</a>
        <a href="#">Home</a>
        <a href="#searchSection">Search Cars</a>
        <a href="#inquirySection">Submit Inquiry</a>
        <a href="#featuredSection">Featured Cars</a>
        <a href="@Url.Action("Logout", "Login")">Logout</a>
    </div>

    <!-- Open Sidebar Button (for small screens) -->
    <span class="sidebar-btn" onclick="toggleNav()">&#9776;</span>

    <div class="content">

        <!-- Hero Section -->
        <div class="hero-section text-center">
            <h1>Welcome to the Guest Dashboard</h1>
            <p>Explore cars, submit inquiries, and find the perfect car for your needs!</p>
        </div>

        <!-- Search Cars Section -->
        <div id="searchSection" class="container full-height">
            <div class="row">
                <div class="col-md-12 col-lg-6 dashboard-card">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h4 class="mb-0">Search for a Car</h4>
                        </div>
                        <div class="card-body">
                            <form action="/Cars/Search" method="get">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="location" placeholder="Enter location" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="carType" placeholder="Enter car type (SUV, Sedan, etc.)" />
                                </div>
                                <div class="form-group">
                                    <input type="number" class="form-control" name="rentalDuration" placeholder="Rental Duration (Days)" />
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Search Cars</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Submit Inquiry Section -->
        <div id="inquirySection" class="container full-height mt-5">
            <div class="row">
                <div class="col-md-12 col-lg-6 dashboard-card">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h4 class="mb-0">Submit an Inquiry</h4>
                        </div>
                        <div class="card-body">
                            <form action="/Inquiry/Submit" method="post" class="inquiry-form">
                                <div class="form-group">
                                    <label for="inquiryText" class="section-title">Your Inquiry</label>
                                    <textarea class="form-control" id="inquiryText" name="inquiryText" placeholder="Ask us anything about cars or services"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Submit Inquiry</button>
                            </form>
                        </div>
                        <div class="card-footer text-center">
                            <small>We’ll get back to you as soon as possible!</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Featured Cars Section -->
        <div id="featuredSection" class="container full-height mt-5">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="section-title">Featured Cars</h2>
                </div>
                <div class="col-md-4 dashboard-card">
                    <div class="card shadow-sm">
                        <img src="car-image.jpg" class="card-img-top" alt="Car Image">
                        <div class="card-body">
                            <h5 class="card-title">Luxury Sedan</h5>
                            <p class="card-text">A comfortable and luxurious car with the latest features.</p>
                            <p class="card-text"><strong>Price: $150/day</strong></p>
                            <a href="/Cars/CarDetails/1" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                <!-- Repeat similar card for other cars -->
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sidebar Toggle JS -->
    <script>
        function toggleNav() {
            var sidebar = document.getElementById("mySidebar");
            if (sidebar.style.width === "250px") {
                sidebar.style.width = "0"; // Close the sidebar
            } else {
                sidebar.style.width = "250px"; // Open the sidebar
            }
        }
    </script>

</body>

</html>
