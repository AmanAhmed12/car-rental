@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        .container {
            max-width: 1400px;
        }

        .contact-image img {
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

            .contact-image img:hover {
                transform: scale(1.05);
                box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
            }

        ul.list-unstyled li {
            font-size: 1.1rem;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

            ul.list-unstyled li i {
                margin-right: 10px;
                font-size: 1.4rem;
                color: orange;
            }

        .head {
            color: orangered;
        }

        .btn-primary {
            display: inline-block;
            padding: 8px 20px;
            font-size: 0.8rem;
            font-weight: bold;
            color: white;
            background: linear-gradient(45deg, #ff7e5f, #feb47b); /* Gradient background */
            text-decoration: none;
            border-radius: 10px; /* Rounded corners */
            transition: all 0.3s ease-in-out;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3); /* Subtle shadow */
            width: 130px;
            text-align: center;
            margin-right: 5px;
        }

        .btn-primary:hover {
                color: black;
                background: linear-gradient(45deg, #ff512f, #dd2476); /* Darker gradient on hover */
                transform: translateY(-3px); /* Slight lift effect */
                box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.4); /* Stronger shadow on hover */
            }
    </style>
</head>

<body>
    <div class="container py-5 mt-5">
        <div class="row align-items-center">
            <!-- Left Section - Contact Details -->
            <div class="col-lg-6">
                <h2 class="fw-bold mb-4 head">Contact Us</h2>
                <p class="lead">Have questions? Feel free to reach out to our customer support team. We’re here to help you get on the road with ease.</p>

                <h4 class="fw-semibold mt-4 head">Get In Touch</h4>
                <ul class="list-unstyled">
                    <li><i class="fas fa-phone"></i> <strong>Phone:</strong> +1 234 567 890</li>
                    <li><i class="fas fa-envelope"></i> <strong>Email:</strong> support@kandyrentals.com</li>
                    <li><i class="fas fa-map-marker-alt"></i> <strong>Address:</strong> 123 Kandy Street, Colombo, Sri Lanka</li>
                    <li><i class="fas fa-clock"></i> <strong>Hours:</strong> Mon - Sun, 8:00 AM - 10:00 PM</li>
                </ul>
            </div>

            <!-- Right Section - Contact Form -->
            <div class="col-lg-6">
                <h4 class="fw-semibold mt-4 head">Send Us a Message</h4>
                <form id="contactForm">
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" name="subject" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="sendEmail()">Send Message</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function sendEmail() {
            var subject = document.getElementById('subject').value;
            var message = document.getElementById('message').value;

            var recipient = "support@kandyrentals.com";  // Automatically filled recipient
            var mailtoLink = "mailto:" + recipient + "?subject=" + encodeURIComponent(subject) + "&body=" + encodeURIComponent(message);
            window.location.href = mailtoLink;
             document.getElementById('contactForm').reset();
        }
    </script>
</body>

</html>
